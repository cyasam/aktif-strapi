{
  "name": "aktif-strapi",
  "private": true,
  "version": "0.1.0",
  "description": "A Strapi application",
  "scripts": {
    "develop": "strapi develop",
    "start": "strapi start",
    "build": "strapi build",
    "strapi": "strapi",
    "app:deploy": "npm run docker:kill && npm run docker:create && npm run docker:db && npm run docker:run",
    "docker:image": "npm run createImage",
    "docker:kill": "npm run getDatabase && npm run killContainer",
    "docker:create": "npm run createContainer && npm run startContainer",
    "docker:db": "npm run setDatabase",
    "docker:run": "npm run stopContainer && docker commit aktif-strapi-container cyasam/aktif-strapi && npm run killContainer && npm run runContainer",
    "getDatabase": "docker cp aktif-strapi-container:/opt/app/.tmp/data.db ./tmp-backup/.",
    "setDatabase": "docker cp ./tmp-backup/data.db aktif-strapi-container:/opt/app/.tmp/.",
    "createImage": "docker build . -t cyasam/aktif-strapi",
    "createContainer": "docker container create -i -t --name aktif-strapi-container cyasam/aktif-strapi",
    "runContainer": "docker run -p 1337:1337 --name aktif-strapi-container cyasam/aktif-strapi",
    "startContainer": "docker start aktif-strapi-container",
    "stopContainer": "docker stop aktif-strapi-container",
    "restartContainer": "docker restart aktif-strapi-container",
    "killContainer": "docker rm -f aktif-strapi-container",
    "openContainer": "docker exec -it aktif-strapi-container bash",
    "pushImage": "docker push cyasam/aktif-strapi"
  },
  "devDependencies": {
    "concurrently": "^7.3.0",
    "copyfiles": "^2.4.1"
  },
  "dependencies": {
    "@strapi/plugin-i18n": "4.3.6",
    "@strapi/plugin-users-permissions": "4.3.6",
    "@strapi/strapi": "4.3.6",
    "better-sqlite3": "7.6.2"
  },
  "author": {
    "name": "A Strapi developer"
  },
  "strapi": {
    "uuid": "5acd6c5e-daba-4962-8357-d9206bb71c6f",
    "telemetryDisabled": true
  },
  "engines": {
    "node": ">=12.x.x <=16.x.x",
    "npm": ">=6.0.0"
  },
  "license": "MIT"
}
